{
    "compilerOptions": {
      "module": "commonjs", 
      "moduleResolution": "Node",
      "target": "ESNext",
      "noImplicitAny": true, 
      "removeComments": true,
      "outDir": "dist",
      "esModuleInterop": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }